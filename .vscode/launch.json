  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceRoot}",
      "args": [
        "roms/${input:romFile}"
      ],
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "romFile",
      "description": "Which rom do you want to test?",
      "options": [
        "cpu_instrs.gb",
        "dmg-acid2.gb",
        "mem_timing.gb",
        "tetris.gb"
      ],
      "default": "tetris.gb"
    },
  ]
}